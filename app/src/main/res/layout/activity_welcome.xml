<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade_welcome"
    tools:context=".WelcomeActivity">

    <!-- Logo principal centrado -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:alpha="0.95"
        app:srcCompat="@drawable/logo_unlpam"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.42"
        tools:ignore="ContentDescription" />

    <!-- Contenedor de textos en la parte inferior -->
    <LinearLayout
        android:id="@+id/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Línea decorativa superior -->
        <View
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/line_decoration"
            android:alpha="0.7" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIRECCIÓN DE TRANSPORTE"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:letterSpacing="0.05"
            android:layout_marginBottom="12dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Secretaría de Coordinación\ny Planeamiento Institucional"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:alpha="0.85"
            android:lineSpacingExtra="4dp"
            tools:ignore="HardcodedText" />

        <!-- Línea decorativa inferior -->
        <View
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/line_decoration"
            android:alpha="0.7" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>