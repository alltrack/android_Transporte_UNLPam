<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    android:paddingTop="8dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <!-- Handle bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bottom_sheet_handle"
        android:alpha="0.3"/>

    <!-- Header con ícono de parada -->
    <LinearLayout
        android:id="@+id/ly_sh_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/img_sh_ic_tipo_vehiculo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="10dp"
            android:background="@drawable/circle_background_orange"
            app:srcCompat="@drawable/ic_bus_stop"
            app:tint="@color/coral"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bsb_txt_denominacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calle 26 esq 15"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/bsb_txt_tiempo_aprox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Próximo micro en 5 min."
                android:textSize="14sp"
                android:textColor="@color/coral"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

    <!-- Contenido con scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/btn_ver_mas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="20dp">

            <!-- Dirección con ícono -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/info_background"
                android:padding="14dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_location"
                        app:tint="#757575"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/bsb_txt_title_direccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Dirección"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <TextView
                    android:id="@+id/bsb_txt_direccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:text="Calle 26 entre 15 y 17"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Horarios con ícono -->
            <LinearLayout
                android:id="@+id/horarios_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/info_background"
                android:padding="14dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_schedule"
                        app:tint="#757575"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/bsb_txt_title_horarios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Horarios"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <TextView
                    android:id="@+id/bsb_txt_horarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:text="07:00 hs | 10:00 hs | 13:00 hs | 16:00 hs"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:lineSpacingExtra="4dp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Botón IR -->
            <Button
                android:id="@+id/btn_ir"
                style="@style/App_Button_Blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cómo llegar"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                app:icon="@drawable/ic_directions"
                app:iconGravity="start"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>