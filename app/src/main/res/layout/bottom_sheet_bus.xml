<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetBus"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="#DDFFFFFF"
    android:orientation="vertical"
    android:weightSum="1"
    app:behavior_hideable="true"
    app:behavior_peekHeight="90dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <!-- Title -->
    <LinearLayout
        android:id="@+id/ly_sh_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bsb_bus_img"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_bus" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bsb_bus_txt_alias"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="Movil 11"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/bsb_bus_txt_patente"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:text="AS145ES"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_ver_mas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:gravity="bottom|end"
        android:orientation="vertical"
        android:textAlignment="viewEnd">

        <ImageView
            android:id="@+id/bsb_bus_img_foto"
            android:layout_width="300dp"
            android:layout_height="225dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/colectivo" />

        <TextView
            android:id="@+id/bsb_bus_txt_ultima_posicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            android:text="Ultimo dato, 14/11/2018 10:45:47"
            android:textAlignment="textEnd"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="12sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>
