<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/controls_margin_small"
    android:background="@color/lightGray"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_parada_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/controls_margin"
        android:layout_marginRight="@dimen/controls_margin"
        android:scaleType="centerCrop"
        tools:src="" />

    <TextView
        android:id="@+id/item_parada_denominacion"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/item_parada_img"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/listTitleSize" />

    <TextView
        android:id="@+id/item_parada_direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_parada_denominacion"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/item_parada_img"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/colorPress"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/item_parada_direccion"
        android:layout_alignStart="@+id/item_parada_denominacion"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_parada_Lu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lu"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_parada_Ma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ma"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_parada_Mi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mi"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_parada_Ju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ju"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_parada_Vi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vi"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_parada_Sa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sa"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_parada_Do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Do"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>