<resources>
    <!-- Base application theme. -->
    <style name="Theme.Colectivos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/blue_200</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/gray</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/gray</item>

        <item name="colorError">@color/coral</item>
        <item name="colorOnError">@color/gray</item>

        <!-- button -->
        <item name="backgroundButtonColor">@color/blue </item>
        <item name="onBackgroundButtonColor"> @color/gray</item>
        <item name="rippleButtonColor"> @color/blue_200</item>
        <item name="textButtonColor"> @color/white</item>

        <!-- Toolbar -->
        <item name="textToolbarColor">@color/white</item>
        <item name="toolbarStyle">@style/App_Toolbar</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Titles -->
        <item name="textTitleColor">@color/blue</item>
        <item name="textSubTitleColor1">@color/black</item>
        <item name="textSubTitleColor2">@color/gray</item>


        <item name="android:windowLayoutInDisplayCutoutMode">never</item>


    </style>

    <style name="Theme.Colectivos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Colectivos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Colectivos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Colectivos.Fullscreen" parent="Theme.Colectivos">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <!-- Toolbar -->
    <style name="App_Title_Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">?attr/textToolbarColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="App_Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/App_Title_Toolbar</item>
        <item name="titleTextColor">?attr/textToolbarColor</item>
        <item name="navigationIconTint">?attr/textToolbarColor</item>

    </style>


    <!-- Formulario -->

    <style name="App_TextInput_style_1" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/purple</item>
        <item name="hintTextColor">@color/gray_500</item>
        <item name="passwordToggleTint">@color/gray</item>

    </style>

    <style name="App_TextInputEdit_Gray">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray_500</item>
    </style>

    <style name="App_TextInputEdit_White">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <!-- Para DROPDOWN (lÃ­nea, micro, manejo, estado) -->
    <style name="App_TextInput_Exposed_White"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/ti_stroke</item>
        <item name="hintTextColor">@color/ti_hint</item>
        <item name="android:textColorHint">@color/ti_hint</item>
        <item name="hintEnabled">true</item>
    </style>

    <!-- Para INPUT NORMAL (comentario, etc.) -->
    <style name="App_TextInput_Outlined_White"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/ti_stroke</item>
        <item name="hintTextColor">@color/ti_hint</item>
        <item name="android:textColorHint">@color/ti_hint</item>
    </style>

    <style name="App_Button_Blue" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">?attr/backgroundButtonColor</item>
        <item name="android:textColor">?attr/textButtonColor</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">?attr/textButtonColor</item>
        <item name="rippleColor">?attr/rippleButtonColor</item>
    </style>

    <style name="App_Title_1" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/textTitleColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="App_SubTitle_1" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/textSubTitleColor1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="App_SubTitle_2" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/textSubTitleColor2</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>

