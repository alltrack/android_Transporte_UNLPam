<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Queries para abrir Google Maps -->
    <queries>
        <package android:name="com.google.android.apps.maps" />
    </queries>


    <!-- Permisos de red -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permisos de ubicación -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- ⚠️ Solo si necesitas ubicación en background (probablemente NO) -->
    <!-- <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" /> -->

    <!-- Cámara (para fotos en reclamos) -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- ⚠️ STORAGE: Solo para API < 33 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"
        tools:ignore="ScopedStorage" />

    <!-- ⚠️ STORAGE: Para API 33+ (si guardas/lees imágenes) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"
        tools:ignore="PhotoAndVideoPolicy" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO"
        tools:ignore="PhotoAndVideoPolicy" />

    <!-- ⚠️ NUEVO: Para API 34+ (Android 14+) - Selected Photos Access -->
    <uses-permission android:name="android.permission.READ_MEDIA_VISUAL_USER_SELECTED" />

    <!-- Features opcionales -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.front" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.camera.flash" android:required="false" />
    <uses-feature android:name="android.hardware.location.gps" android:required="false" />

    <application
        android:name=".GlobalClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Colectivos"
        android:usesCleartextTraffic="false"
        android:requestLegacyExternalStorage="false">

        <!-- ⚠️ Google Maps API Key (UNA SOLA VEZ) -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- Splash Screen -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.Colectivos.Fullscreen"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <!-- Main Activities -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Colectivos.NoActionBar"
            android:label="Mapa" />

        <activity
            android:name=".ParadasActivity"
            android:exported="false"
            android:theme="@style/Theme.Colectivos.NoActionBar"
            android:label="Paradas" />

        <activity
            android:name=".ParadaShowActivity"
            android:theme="@style/Theme.Colectivos.NoActionBar"
            android:exported="false"
            android:label="Horarios"
            android:parentActivityName=".ParadasActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ParadasActivity" />
        </activity>

        <activity
            android:name=".ReclamoActivity"
            android:theme="@style/Theme.Colectivos.NoActionBar"
            android:exported="false"
            android:label="Como Viajo" />

        <activity
            android:name=".PoliticasActivity"
            android:exported="false"
            android:theme="@style/Theme.Colectivos.NoActionBar"
            android:label="@string/title_activity_politicas" />

        <activity
            android:name=".SelectCityActivity"
            android:exported="false"
            android:theme="@style/Theme.Colectivos.NoActionBar"
            android:noHistory="true"/>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>